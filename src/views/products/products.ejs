<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head') %> 
<body>
    
    <%- include('../partials/header')  %> 

    <main>
        <section class="products">
            <div style="margin-bottom: 3em;" class="title">
                <h2>Todos los productos</h2>
            </div>
            <div class="products-list">
                <% list.forEach(product => { %>
                    <article>
                        <a class="link" href="products/detail/<%= product.id %>">
                        <figure class="product-img">
                            <% if (product.img != null) { %>
                                <img src="<%= product.img %>" alt="">
                            <% } else {%>
                                <img src="/img/uploads/products/zapatilla1.png" alt="">
                            <% } %> 
                        </figure>
                        <h3><%= `${product.brands.name} ${product.model}` %> </h3>
                        <p>$<%= product.price %> </p>
                        <a href="products/detail/<%= product.id %> " class="comprar">comprar</a>
                    </article>
                <% }) %>
            </div>
        </section>
    </main>

    <%- include('../partials/footer')  %> 

</body>
</html>
