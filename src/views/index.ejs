<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head') %> 

<body>
    
    <%- include('./partials/header') %> 

    <main>
        <section class="hero">
            <div class="swiper">
                <div class="swiper-wrapper">
                  <div class="swiper-slide">
                    <a class='carrusel-wrapper' href="/products/detail/1">
                        <img src="/img/carrusel.png">
                        <h2>Lo ultimo en <br> Air Force 1</h2>
                        <a class='cta' href="/products/detail/1">Comprar ya</a>
                    </a>
                  </div>
                  <div class="swiper-slide">
                    <a class='carrusel-wrapper' href="/products">
                        <img src="/img/jordan-banner.jpg">
                        <h2>Â¡Air Jordan <br> para todos!</h2>
                        <a class='cta jordan' href="/products">Comprar ya</a>
                    </a>
                  </div>
                  <div class="swiper-slide">
                    <a class='carrusel-wrapper' href="/products">
                        <img class='adidas' src="/img/running.jpg">
                        <h2>50% de descuento <br> en running</h2>
                        <a class='cta' href="/products">Comprar ya</a>
                    </a>
                  </div>
            </div>
                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
              </div>
        </section>
        <section class="products">
            <div class="title">
                <h2>Productos destacados</h2>
            </div>
            <div class="products-list">
                <% list.forEach(product => { %>
                    <% if (product.destacada == true) { %>
                        <article>
                            <a class="link" href="products/detail/<%= product.id %>">
                            <figure class="product-img">
                                <% if (product.img) { %>
                                    <img src="<%= product.img %> " alt="">
                                <% } else {%>
                                    <img src="/img/uploads/zapatilla1.png" alt="">
                                <% } %> 
                            </figure>
                            <h3><%= `${product.brand.name} ${product.model}` %> </h3>
                            <p>$<%= product.price %></p>
                            <a href="products/detail/<%= product.id %> " class="comprar">comprar</a>
                        </article>
                    <% } %>
                <% }) %>
            </div>
        </section>

        <section class="banners">
            <div class="top-row-banner">
                <div class="top-left-banner">
                    <a href="/products">
                        <h3>50% en productos nike</h3>
                    </a>
                </div>
                <div class="top-right-banner">
                    <a href="/products">
                        <h3>sneakers jordan</h3>
                    </a>
                </div>
            </div>
            <div class="bottom-row-banner">
                <div class="bottom-left-banner">
                    <a href="/products">
                        <h3>lo nuevo en air force</h3>
                    </a>
                </div>
                <div class="bottom-right-banner">
                    <a href="/products">
                        <h3>2 x 1 en zapatillas de running</h3>
                    </a>
                </div>
            </div>
        </section>
    </main>

    <script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>
    <script src="js/swiper.js"></script>

    <%- include('./partials/footer')  %> 

</body>
</html>
