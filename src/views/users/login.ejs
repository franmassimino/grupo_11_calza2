<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head') %> 
<body>

    <%- include('../partials/header')  %> 

    <main>
        <div class="form-container">
            <div class="background-container">
                <div id="left" class="background-left-content">
                    <h2>¿YA SOS PARTE DE NOSOTROS?</h2>
                    <a href="#" id="login">INICIA SESION</a>
                </div>
                <div id="right" class="background-right-content">
                    <h2>¿TODAVIA NO ESTAS REGISTRADO?</h2>
                    <a href="#" id="register">REGISTRATE</a>
                </div>
            </div>
            <div id="overlay" class="overlay-container">
                <div class="overlay-content">
                    <div class="login">
                        <form method="POST" action='/users/processLogin'>
                            <h2>INICIAR SESIÓN</h2>
                            <label for="email">Email</label>
                            <input type="text" id="email" name="email" placeholder="Escriba su nombre de usuario">
                            <label for="password">Contraseña</label>
                            <input type="password" name="password" placeholder="Escriba su contraseña">
                            <fieldset>
                                <fieldset class="sesion">
                                    <label>Mantener mi sesion iniciada</label>
                                    <input type="checkbox" id="cbox1" value="sesion-iniciada">
                                </fieldset>
                            <a href="#">Olvidé mi contraseña</a>
                            </fieldset>
                            <button type="submit">Enviar</button>
                        </form>
                    </div>
                    <div id="register-form" class="register">
                        <form method="POST" action='/users/processRegister' enctype="multipart/form-data">
                            <h2>REGISTRARSE</h2>
                            <label for="user">Nombre de usuario</label>
                            <input type="text" id="user" name="user" placeholder="Escriba su nombre de usuario">
                            <label for="email2">Email</label>
                            <input type="email" id="email2" name="email" placeholder="Escriba su email">
                            <label for="imagen">Imagen de perfil</label>
                            <input type="file" id="imagen" name="imagen" >
                            <label for="password">Contraseña</label>
                            <input type="password" name="password"placeholder="Escriba su contraseña">
                            <p>Su contraseña debe contener por lo menos 8 caracteres.</p>
                            <button type="submit">Enviar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer')  %> 


    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.7.0/gsap.min.js"></script>
    <script>

        
        const register = document.getElementById('register')
        const login = document.getElementById('login')
        const registerForm = document.getElementById('register-form')

        register.addEventListener('click', e => {
            e.preventDefault()
            const px = '100%'
            gsap.to('#overlay', {duration: .5,delay:.1, x: px, ease:'power.inOut'});
            gsap.to('.login', {duration: 0, opacity:0});
            gsap.to('.register', {duration: .75, delay:.5, opacity:1, x: 0});
            gsap.from('#left', {duration: .75, opacity:1, x: -100, ease:'power.inOut'})
            registerForm.classList.add('show')
        })

        login.addEventListener('click', e => {
            e.preventDefault()
            gsap.to('#overlay', {duration: .5, x: 0, ease:'power.inOut'});
            gsap.to('.login', {duration: 1, delay:.5, opacity:1, x: 0});
            gsap.to('.register', {duration: .25, opacity:0});
            gsap.from('#right', {duration: .75, opacity:1, x: 100, ease:'power.inOut'})
            registerForm.classList.remove('show')
        })


    </script>
</body>
</html>
.