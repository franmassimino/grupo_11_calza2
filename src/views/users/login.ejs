<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>

            <main>
                <div class="form-container">
                    <div class="login">
                        <form id="loginForm" method="POST" action="/users/processLogin">
                            <h2>INICIAR SESIÓN</h2>
                            <label for="email">Email</label>
                            <input type="text" id="email" name="email" placeholder="Escriba su nombre de usuario" />
                            <small id="emailError" class="error">Ingrese un email válido</small>
                            <label for="password">Contraseña</label>
                            <input type="password" id="password" name="password" placeholder="Escriba su contraseña" />
                            <small id="passwordError" class="error">Ingrese una contraseña válida</small>
                            <small id="passwordError2" class="error"></small>
                            <fieldset>
                                <fieldset class="sesion">
                                    <input type="checkbox" id="cbox1" value="sesion-iniciada" />
                                    <label>Mantener mi sesion iniciada</label>
                                </fieldset>
                            </fieldset>
                            <button type="submit">Enviar</button>
                        </form>
                    </div>
                    <div class="right-container">
                        <div class="right-content">
                            <h2>¿TODAVIA NO ESTAS REGISTRADO?</h2>
                            <a href="/users/register" class="register">REGISTRATE</a>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('../partials/footer') %>

            <script src="/js/loginValidation.js"></script>
    </body>

</html>